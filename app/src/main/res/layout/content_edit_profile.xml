<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_edit_profile"
    tools:context="com.arifultonu.businesslink.EditProfileActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Change"
        android:id="@+id/btnSaveChange"
        android:width="320dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/webAddress"
        android:width="320dp"
        android:layout_above="@+id/email"
        android:layout_alignLeft="@+id/btnSaveChange"
        android:layout_alignStart="@+id/btnSaveChange"
        android:text="Web Address" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:width="320dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/webAddress"
        android:layout_alignStart="@+id/webAddress"
        android:text="Email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/skype"
        android:width="320dp"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:text="Skype" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fullName"
        android:width="260dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Full Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/coName"
        android:width="260dp"
        android:layout_below="@+id/fullName"
        android:layout_alignLeft="@+id/fullName"
        android:layout_alignStart="@+id/fullName"
        android:text="Company Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/designation"
        android:width="260dp"
        android:layout_below="@+id/coName"
        android:layout_alignRight="@+id/coName"
        android:layout_alignEnd="@+id/coName"
        android:text="Designation" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/country"
        android:width="260dp"
        android:layout_below="@+id/designation"
        android:layout_alignRight="@+id/designation"
        android:layout_alignEnd="@+id/designation"
        android:text="Country" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneNo"
        android:width="320dp"
        android:layout_below="@+id/skype"
        android:layout_alignRight="@+id/skype"
        android:layout_alignEnd="@+id/skype"
        android:text="Phone No" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/about"
        android:width="320dp"
        android:layout_below="@+id/phoneNo"
        android:layout_alignRight="@+id/phoneNo"
        android:layout_alignEnd="@+id/phoneNo"
        android:text="About" />




</RelativeLayout>
