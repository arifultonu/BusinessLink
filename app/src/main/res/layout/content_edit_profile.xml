<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_edit_profile"
    tools:context="com.arifultonu.businesslink.EditProfileActivity">



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/viewFullName"
        android:id="@+id/editFullName"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_alignParentEnd="false"
        android:width="220dp"
        android:textSize="22sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Com. Name"
        android:id="@+id/editCoName"
        android:width="220dp"
        android:textSize="18sp"
        android:layout_below="@+id/editFullName"
        android:layout_alignRight="@+id/editFullName"
        android:layout_alignEnd="@+id/editFullName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country"
        android:id="@+id/editLocation"
        android:width="220dp"
        android:textSize="18sp"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/editDesignation"
        android:layout_alignStart="@+id/editDesignation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web :"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.google.com"
        android:id="@+id/editWebAddress"
        android:textSize="18sp"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/editLocation"
        android:layout_alignStart="@+id/editLocation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email :"
        android:id="@+id/textView4"
        android:layout_marginTop="31dp"
        android:textSize="18sp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="google@gmail.com"
        android:id="@+id/editEmailAddress"
        android:textSize="18sp"
        android:layout_above="@+id/textView5"
        android:layout_alignLeft="@+id/editWebAddress"
        android:layout_alignStart="@+id/editWebAddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skype :"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8"
        android:layout_marginTop="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="googleSkype"
        android:id="@+id/editSkype"
        android:textSize="18sp"
        android:layout_above="@+id/textView8"
        android:layout_alignLeft="@+id/editFullName"
        android:layout_alignStart="@+id/editFullName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designation"
        android:id="@+id/editDesignation"
        android:width="220dp"
        android:textSize="18sp"
        android:layout_above="@+id/editLocation"
        android:layout_alignLeft="@+id/editCoName"
        android:layout_alignStart="@+id/editCoName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone :"
        android:id="@+id/textView8"
        android:textSize="18sp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01717819612"
        android:id="@+id/editMobileNo"
        android:textSize="18sp"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignLeft="@+id/editSkype"
        android:layout_alignStart="@+id/editSkype" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About :"
        android:id="@+id/textView6"
        android:textSize="18sp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="about business, product, target audience"
        android:id="@+id/textView7"
        android:textSize="18sp"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/viewMobileNo"
        android:layout_alignStart="@+id/viewMobileNo" />
</RelativeLayout>
